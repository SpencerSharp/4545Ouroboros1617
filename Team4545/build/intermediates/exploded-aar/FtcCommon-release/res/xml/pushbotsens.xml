    <MotorController name="wheels" serialNumber="N/A">
        <Motor name="left motor" port="1" />
        <Motor name="right motor" port="2" />
    </MotorController>
    <MotorController name="tools" serialNumber="N/A">
        <Motor name="arm motor" port="1" />
    </MotorController>
    <ServoController name="servos" serialNumber="N/A">
        <Servo name="left claw" port="1" />
        <Servo name="right claw" port="2" />
